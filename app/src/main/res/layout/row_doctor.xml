<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:id="@+id/constraintLayout">


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/cardView"

            tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:id="@+id/cardViewConstraint" tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="8dp"
        >

            <ImageView
                    android:id="@+id/icon"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@mipmap/ic_launcher_round"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/UserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                    tools:text="Doctor Name"
                    app:layout_constraintStart_toEndOf="@+id/icon"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/content"
                    app:layout_constraintStart_toEndOf="@+id/icon"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/UserName"
                    tools:text=" Description of the doctor/ Location"
                    app:layout_constraintEnd_toEndOf="parent"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>